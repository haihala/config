[color]
	diff = auto
	branch = auto
	status = auto
[core]
	editor = nvim
    whitespace = error
	autocrlf = off
	safecrlf = off
	excludesfile = ~/.config/git/global_gitignore
[cola]
	spellcheck = false
[rebase]
	autosquash = true
    autoStash = true
    missingCommitsCheck = warn
[rerere]
	enabled = true
[filter "lfs"]
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
	clean = git-lfs clean -- %f
[pull]
	rebase = true
[push]
	autoSetupRemote = true
[include]
    path = secret-config
[init]
	defaultBranch = main
